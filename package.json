{
  "name": "conduit",
  "version": "1.0.0",
  "description": "conduit api",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest --coverage --verbose --detectOpenHandles",
    "dev": "tsc-watch --onSuccess \"node -r dotenv/config ./dist/server.js\"",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/filschristian/conduit.git"
  },
  "keywords": [
    "conduit",
    "medium",
    "api"
  ],
  "author": "Rene Christian Nshogoza",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/filschristian/conduit/issues"
  },
  "homepage": "https://github.com/filschristian/conduit#readme",
  "dependencies": {
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/node": "^12.7.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "coveralls": "^3.0.6",
    "express": "^5.0.0-alpha.7",
    "tsc-watch": "^3.0.1",
    "typescript": "^3.6.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/supertest": "^2.0.8",
    "dotenv": "^8.1.0",
    "jest": "^24.9.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coveragePathIgnorePatterns": [
      "coverage",
      "node_modules",
      "src/server.ts",
      "dist"
    ]
  }
}
